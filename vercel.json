{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    { // <-- Esta es la nueva regla que aÃ±ades
      "source": "/property/:id",
      "destination": "/api/render?id=:id"
    }
  ]
}
